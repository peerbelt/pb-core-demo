server {
        listen 80;
        server_name cd-eu-console.peerbelt.com cd-eu-console.peerbelt.link;
        return 301 https://cd-eu-console.peerbelt.com$request_uri;
}

server {
        listen 80;
        server_name  cd-eu-www.peerbelt.link cd-eu-www.peerbelt.com;
        return 301 https://cd-eu-www.peerbelt.com$request_uri;
}

